<div class="product">
    <div>
        <div class="name"><h5><a href="/product?id=${product.id}">${product.name}</a></h5></div>
        <div class="description"><p>${product.description}</p></div>
    </div>
    <div>
        <div class="meta-data">
        ${product.author} <br>
        ${product.date}
        </div>
        <div><span class="glyphicon glyphicon-thumbs-up"></span> ${product.likesNumber} <span class="glyphicon glyphicon-thumbs-down"></span> ${product.dislikesNumber}</div>
    </div>
</div>